<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/image" />

    <Button
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image"
        android:text="Banner!" />

    <Button
        android:id="@+id/interstital"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/banner"
        android:text="Interstitial!" />
    <Button
        android:id="@+id/native_template"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/interstital"
        android:text="Native Template" />
    <Button
        android:id="@+id/mrec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/native_template"
        android:text="MRECs" />

    <Button
        android:id="@+id/bidding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mrec"
        android:text="Bidding / Mediation" />



</RelativeLayout>